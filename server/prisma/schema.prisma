generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  author          String
  language        String?
  words           BookWord[]
}

model Word {
  id        Int      @id @default(autoincrement())
  text      String @unique
  books BookWord[]
}

model BookWord {
  bookId  Int
  wordId  Int
  frequency Int @default(0)
  Book    Book   @relation(fields: [bookId], references: [id])
  Word    Word   @relation(fields: [wordId], references: [id])

  @@id([bookId, wordId])
}
